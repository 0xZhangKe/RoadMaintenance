<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:layout_marginRight="17dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#3A3A3A"
            android:text="同济道路养护"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="账号"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/login_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="输入您的账号"
                android:maxLines="1"
                android:padding="14dp"
                android:text="13579246810"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
        </LinearLayout>
        <View style="@style/SpacingLineMarginStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="密码"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/login_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:ellipsize="end"
                android:hint="输入密码"
                android:singleLine="true"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="14dp"
                android:text="123"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
        </LinearLayout>
        <View style="@style/SpacingLineMarginStyle"/>

        <TextView
            android:id="@+id/login_loginBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/select_blue_button_background_"
            android:gravity="center"
            android:padding="10dp"
            android:text="登      录"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvForgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:textColor="@color/blue"
            android:text="忘记密码？"/>

        <CheckBox
            android:id="@+id/login_keeppsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:text="记住密码"
            android:textColor="@color/main_blue"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="立即注册"
            android:textColor="@color/main_blue"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
