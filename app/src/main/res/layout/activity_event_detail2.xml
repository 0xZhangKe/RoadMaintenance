                <View style="@style/SpacingLineStyle" />

                <com.jinjiang.roadmaintenance.ui.view.ListViewForScrollView
                    android:id="@+id/eventdetail2_approvalStateLv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:padding="10dp"
                    android:scrollbars="none" />

                <View style="@style/SpacingLineStyle" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/tab_shade" />
            <RadioGroup
                android:id="@+id/eventdetail2_confirm_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/eventdetail2_confirm1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="通过"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/eventdetail2_confirm2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="不通过"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/eventdetail2_remark_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/tab_shade" />

                <EditText
                    android:id="@+id/eventdetail2_remark"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:gravity="left|top"
                    android:hint="请输入处理意见"
                    android:inputType="number"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/tab_shade" />

            <View style="@style/SpacingLineStyle" />

            <TextView
                android:id="@+id/eventdetail2_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/select_blue_button_background_"
                android:gravity="center"
                android:padding="10dp"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
